@using MVCProje.Models.Entity
@model List<TBLKATEGORI>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>KATEGORİ LİSTESİ</h2>
<table class="table table-bordered">
    <tr>
        <th>Kategori Id</th>
        <th>Kategori Ad</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Pasif Yap</th>
        <th>Aktif Yap</th>
    </tr>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.KATEGORIID</th>
                <td>@item.KATEGORIAD</td>
                <td>@item.Durum</td>
                <td>
                    <a href="/Category/DeleteCategory/@item.KATEGORIID" class="btn btn-danger" style="width:90%">Sil</a>
                </td>
                <td>
                    <a href="/Category/UpdateCategory/@item.KATEGORIID" class="btn btn-warning" style="width:75%">Güncelle</a>
                </td>

                <td>
                    <a href="/Category/PasifYap/@item.KATEGORIID" class="btn btn-info" style="width:100%">Pasif Yap</a>
                </td>
                <td>
                    <a href="/Category/ActivateUser/@item.KATEGORIID" class="btn btn-success" style="width:100%">Aktif Yap</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Category/AddCategory/" class="btn btn-primary" style="width:30%">Kategori Ekle</a>

